{
  "manifest_version": 3,
  "name": "Auto FB Poster",
  "version": "2.0.0",
  "description": "Lấy bài viết từ Google Sheet và tự động đăng lên Facebook cá nhân",
  "permissions": [
    "storage",
    "scripting",
    "tabs",
    "activeTab",
    "clipboardWrite",
    "alarms",
    "webRequest"
  ],
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://facebook.com/*",
    "https://docs.google.com/*",
    "https://sheets.googleapis.com/*",
    "https://user-images.githubusercontent.com/*",
    "https://*/*",
    "http://*/*",
    "*://*.fbcdn.net/*",
    "*://*.facebook.com/*",
    "https://asia-southeast1-autopostermmo.cloudfunctions.net/*",
    "https://*.firebaseio.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.facebook.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["contentScript.js"],
      "matches": ["https://*.facebook.com/*"]
    }
  ]
}
